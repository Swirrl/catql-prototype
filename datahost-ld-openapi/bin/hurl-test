#!/bin/sh


while getopts t: flag
do
    case "${flag}" in
        t) tag=${OPTARG};;
    esac
done

if [ -z "$tag"];
then
	echo "usage: bin/test-hurl -t UNIQUE_TAG"
	exit 1
fi

pattern="s|/data/test-011|/data/test-$tag|"
sed "$pattern" bin/hurl-data/test.hurl.template > test.hurl
hurl --test test.hurl
